<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SignUserActivity">

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="108dp"
      android:layout_height="306dp"
      android:layout_marginTop="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/authorithation" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/russo"
      android:text="Регестрация"
      android:textColor="@color/white"
      android:textSize="36dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3" />



  <EditText
      android:id="@+id/sign_in_email"
      android:layout_width="308dp"
      android:layout_height="45dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/edit_text_bg"
      android:elevation="2dp"
      android:fontFamily="@font/russo"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:paddingLeft="15dp"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5"
      tools:ignore="UnknownId" />

  <EditText
      android:id="@+id/sign_in_password"
      android:layout_width="308dp"
      android:layout_height="45dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/edit_text_bg"
      android:elevation="2dp"
      android:fontFamily="@font/russo"
      android:hint="Password"
      android:inputType="textPassword"
      android:paddingLeft="15dp"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/sign_in_email"
      tools:ignore="UnknownId" />

  <EditText
      android:id="@+id/sign_in_password_two"
      android:layout_width="308dp"
      android:layout_height="45dp"
      android:background="@drawable/edit_text_bg"
      android:elevation="2dp"
      android:layout_marginTop="15dp"
      android:fontFamily="@font/russo"
      android:hint="Password"
      android:inputType="textPassword"
      android:paddingLeft="15dp"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@+id/sign_in_password"
      tools:ignore="DuplicateIds,UnknownId"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.482"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteX="52dp" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/opensans1"
      android:text="Continue with"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:layout_marginTop="15dp"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.482"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/sign_in_password_two"
      tools:layout_editor_absoluteX="144dp" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/edit_text_bg"
      android:outlineAmbientShadowColor="@color/white"
      android:outlineSpotShadowColor="@color/white"
      android:text="Facebook"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/button2"
      app:layout_constraintHorizontal_bias="0.087"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6"
      tools:ignore="UnknownIdInLayout" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="60dp"
      android:background="@drawable/edit_text_bg"
      android:elevation="10dp"
      android:outlineAmbientShadowColor="@color/white"
      android:outlineSpotShadowColor="@color/white"
      android:text="Google"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/button3"
      android:layout_width="308dp"
      android:layout_height="57dp"
      android:layout_marginBottom="60dp"
      android:background="@drawable/blue_btn"
      android:elevation="10dp"
      android:fontFamily="@font/russo"
      android:gravity="center"
      android:outlineAmbientShadowColor="@color/white"
      android:outlineSpotShadowColor="@color/white"
      android:shadowColor="@color/white"
      android:text="Подтвердить"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/button2"
      app:layout_constraintHorizontal_bias="0.424"
      app:layout_constraintStart_toStartOf="@+id/button" />

  <TextView
      android:id="@+id/go_user_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="I have account!"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.482"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button3"
      tools:layout_editor_absoluteX="186dp" />
</androidx.constraintlayout.widget.ConstraintLayout>